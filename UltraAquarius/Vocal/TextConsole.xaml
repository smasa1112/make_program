<UserControl x:Class="Vocal.TextConsole"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vocal"
             mc:Ignorable="d"
             d:DesignHeight="245" d:DesignWidth="320">
    <Grid>
        <TextBox x:Name="Console" HorizontalAlignment="Left" TextWrapping="Wrap"
                 VerticalAlignment="Bottom" VerticalScrollBarVisibility="Auto" 
                 IsReadOnly="True" Height="245" Width="320" />
    </Grid>
</UserControl>
